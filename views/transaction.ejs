    <div class="container-fluid py-4">
      <%    if(alert == "true"){ %>
          <div class="alert alert-<%=alertType%> mt-3 mx-2 alert-dismissible text-white" role="alert">
            <span class="text-sm"><%=message%></span>
            <button type="button" class="btn-close text-lg py-3 opacity-10" data-bs-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
      <%  } %>
      <div class="container my-auto">
        <div class="row">
          <div class="col-lg-4 col-md-8 col-12 mx-auto">

            <div class="col-lg-6 mt-5">

              <div class="card mt-5 my-3">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                  <div class="bg-gradient-success shadow-success border-radius-lg py-2 pe-1">
                    <h4 class="text-white text-center mb-0">Transaction</h4>
                  </div>
                </div>

                <div class="card-body overflow-auto vertical-menu-2 p-3 pb-0">
                  <div class="table-responsive">

                    <ul class="list-group">
                  <%    if(transaction.length != 0){  %>
                    <%   transaction.forEach(function(payment){  %>
                    <%   if(payment.status == 'Pending'){  %>
                  <%       //Pending warning trnx  %>
                            <hr class="horizontal dark">
                            <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                              <div class="d-flex align-items-center">
                                <button class="btn btn-icon-only btn-rounded btn-outline-dark mb-0 me-3 p-3 btn-sm d-flex align-items-center justify-content-center"><i class="material-icons text-lg">priority_high</i></button>
                                <div class="d-flex flex-column">
                                  <h6 class="text-start mb-1 text-dark text-sm"><%=payment.from%></h6>
                                  <span class="text-start text-xs">Amount - <%=payment.amount%></span>
                                </div>
                              </div>
                              <div class="d-flex align-items-center text-dark text-gradient text-sm font-weight-bold">
                               Pending
                              </div>
                            </li>
                    <%     }else{  %>
                      <%     if(payment.status == 'Success'){  %>
                    <%         if(payment.type == 'Credit'){  %>
                          <%     //Credit Green trnx %>
                                <hr class="horizontal dark">
                                <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                                  <div class="d-flex align-items-center">
                                    <button class="btn btn-icon-only btn-rounded btn-outline-success mb-0 me-3 p-3 btn-sm d-flex align-items-center justify-content-center"><i class="material-icons text-lg">expand_less</i></button>
                                    <div class="d-flex flex-column">
                                      <h6 class="text-start mb-1 text-dark text-sm"><%=payment.from%></h6>
                                      <span class="text-start text-xs"><%=payment.time.date%>/<%=payment.time.month%>/<%=payment.time.year%></span>
                                    </div>
                                  </div>
                                  <div class="d-flex align-items-center text-success text-gradient text-sm font-weight-bold">
                                  <%=payment.amount%>/-
                                  </div>
                                </li>
                  <%           }else{  %>
                    <%        //Debit Red trnx  %>
                                <hr class="horizontal dark">
                                <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                                  <div class="d-flex align-items-center">
                                    <button class="btn btn-icon-only btn-rounded btn-outline-danger mb-0 me-3 p-3 btn-sm d-flex align-items-center justify-content-center"><i class="material-icons text-lg">expand_more</i></button>
                                    <div class="d-flex flex-column">
                                      <h6 class="text-start mb-1 text-dark text-sm"><%=payment.from%></h6>
                                      <span class="text-start text-xs"><%=payment.time.date%>/<%=payment.time.month%>/<%=payment.time.year%></span>
                                    </div>
                                  </div>
                                  <div class="d-flex align-items-center text-danger text-gradient text-sm font-weight-bold">
                                   <%=payment.amount%>/-
                                  </div>
                                </li>
                      <%       }  %>
                    <%       }else{  %>
                    <%     //failed Trnx  %>
                              <hr class="horizontal dark">
                              <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                                <div class="d-flex align-items-center">
                                  <button class="btn btn-icon-only btn-rounded btn-outline-danger mb-0 me-3 p-3 btn-sm d-flex align-items-center justify-content-center"><i class="material-icons text-lg">priority_high</i></button>
                                  <div class="d-flex flex-column">
                                    <h6 class="text-start mb-1 text-dark text-sm"><%=payment.from%></h6>
                                    <span class="text-start text-xs"><%=payment.time.date%>/<%=payment.time.month%>/<%=payment.time.year%> | <%=payment.amount%>/-</span>
                                  </div>
                                </div>
                                <div class="d-flex align-items-center text-danger text-gradient text-sm font-weight-bold">
                                 Failed
                                </div>
                              </li>
                    <%       }  %>
                    <%     }  %>
                  <%     });  %>
                  <%    }else{  %>
                        <br><br>
                        <div class="">
                            <h6 class="mb-1 text-dark text-sm">No transactions found</h6>
                        </div>
                  <%    } %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

