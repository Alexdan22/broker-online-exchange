<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
  <link rel="icon" type="image/png" href="../assets/img/logo-ct.png">
  <title>
    Broker Online Exchange
  </title>
  <!--     Fonts and icons     -->
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
  <!-- Nucleo Icons -->
  <link href="../assets/css/nucleo-icons.css" rel="stylesheet" />
  <link href="../assets/css/nucleo-svg.css" rel="stylesheet" />
  <!-- Font Awesome Icons -->
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <!-- Material Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
  <!-- CSS Files -->
  <link id="pagestyle" href="../assets/css/material-dashboard.css?v=3.0.0" rel="stylesheet" />
</head>

<body class="g-sidenav-show  bg-gray-200">
  <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3 " id="sidenav-main">
    <div class="sidenav-header">
      <i class="fas fa-times p-3 cursor-pointer text-dark opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
      <a class="navbar-brand m-0" href="/dashboard ">
        <img src="../assets/img/logo-ct.png" class="navbar-brand-img h-100" alt="main_logo">
        <span class="ms-1 font-weight-bold text-dark">Broker Online Exchange</span>
      </a>
    </div>
    <hr class="horizontal light mt-0 mb-2">
    <div class="collapse navbar-collapse  w-auto  max-height-vh-100" id="sidenav-collapse-main">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link text-dark " href="/dashboard">
            <span class="nav-link-text ms-1">Dashboard</span>
          </a>
        </li><li class="nav-item mt-3">
          <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-8">Account pages</h6>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark active bg-gradient-success" href="/profile">
            <span class="nav-link-text ms-1">Profile</span>
          </a>
        </li>
        <li class="nav-item mt-3">
          <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-8">Billing</h6>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark " href="/invest">
            <span class="nav-link-text ms-1">Add Balance</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark " href="/withdrawal">
            <span class="nav-link-text ms-1">Withdrawal</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark" href="/transaction">
            <span class="nav-link-text ms-1">Transaction</span>
          </a>
        </li>


      </ul>
    </div>

    <div class="sidenav-footer position-absolute w-100 bottom-0 ">
      <div class="mx-3">
        <a class="btn bg-gradient-success mt-4 w-100" href="/log-out" type="button">Log out</a>
      </div>
    </div>
  </aside>
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg pt-4 px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
      <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
          <h6 class="font-weight-bolder mb-0">Profile</h6>
        </nav>
        <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">

          <ul class="navbar-nav  justify-content-end">
            <li class="nav-item d-flex ps-3 align-items-center">
              <a href="/profile" class="nav-link text-body  font-weight-bold px-0">
                <i class="fa fa-user text-success me-sm-1"></i>
                <span><%=username%></span>
              </a>
            </li>
            <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
              <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                <div class="sidenav-toggler-inner">
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                  <i class="sidenav-toggler-line"></i>
                </div>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <div class="main-content position-relative bg-gray-100 max-height-vh-100 h-100">
      <div class="container-fluid px-2 px-md-4">
        <div class="page-header min-height-150 border-radius-xl mt-4" >
        </div>
        <div class="card card-body mx-3 mx-md-4 mt-n6">
          <div class="row gx-4 mb-2">
            <div class="col-auto">
              <div class="avatar avatar-xl position-relative">
                <img src="../assets/img/bruce-mars.jpg" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
              </div>
            </div>
            <div class="col-auto my-auto">
              <div class="h-100">
                <h5 class="mb-1">
                  <%=username%>
                </h5>
                <p class="mb-0 font-weight-normal text-sm">
                  <%=userID%>
                </p>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="row">
              <div class="col-12 col-xl-4">
                <div class="card card-plain h-100">
                  <div class="card-header pb-0 p-3">
                  <div class="card-body p-3">
                    <ul class="list-group">
                      <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Username:</strong> &nbsp; <%=username%></li>
                      <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">UserID:</strong> &nbsp; <%=userID%></li>
                      <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Email:</strong> &nbsp; <%=email%></li>
                      <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Sponsored By:</strong> <%=sponsorID%></li>
                      <li class="list-group-item border-0 ps-0 pb-0">
                        <strong class="text-dark text-sm">Social:</strong> &nbsp;
                        <a target="_blank" class="btn btn-facebook btn-simple mb-0 ps-1 pe-2 py-0"
                        href="https://www.facebook.com/sharer/sharer.php?u=https://broker-online-exchange.onrender.com/register/<%= userID %>">
                          <i class="fab fa-facebook fa-lg"></i>
                        </a>
                        <a target="_blank" class="btn btn-twitter btn-simple mb-0 ps-1 pe-2 py-0"
                        href="https://twitter.com/intent/tweet?url=https://broker-online-exchange.onrender.com/register/<%= userID %>">
                          <i class="fab fa-twitter fa-lg"></i>
                        </a>
                        <a target="_blank" class="btn btn-instagram btn-simple mb-0 ps-1 pe-2 py-0"
                         href="https://api.whatsapp.com/send?text=https://broker-online-exchange.onrender.com/register/<%= userID %>">
                          <i class="fab fa-whatsapp fa-lg"></i>
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <%  if(profile == "profile2"){ %>
          <div class="">
            <div class="card-header pb-0 px-3">
              <h6 class="mb-0">Bank Details</h6>
            </div>
            <div class="p-2">
              <ul class="list-group">
                <li class="list-group-item border-0 d-flex mb-2 mt-3 bg-gray-100 border-radius-lg">
                  <div class="d-flex flex-column">
                    <h6 class="mb-3 text-sm"><%=accountHoldersName%></h6>
                    <span class="mb-2 text-xs">Account Number: <span class="text-dark font-weight-bold ms-sm-2"><%=accountNumber%></span></span>
                    <span class="mb-2 text-xs">Bank: <span class="text-dark ms-sm-2 font-weight-bold"><%=bankName%></span></span>
                    <span class="text-xs">IFSC: <span class="text-dark ms-sm-2 font-weight-bold"><%=ifsc%></span></span>
                  </div>
                </li>
              </ul>
            </div>
          </div>
      <%  } %>
      </div>
  <%if(profile == "profile"){ %>

        <div class="card-body">
          <div class="h-100">
            <h5 class="mb-1">
              Update Bank Details
            </h5>
          </div>
          <form role="form" method="post" action="/bankDetails" class="text-start">
            <div class="input-group input-group-outline my-3">
              <label class="form-label">Account Holder Name</label>
              <input  requried type="text" name="holdersName" class="form-control">
            </div>
            <div class="input-group input-group-outline mb-3">
              <label class="form-label">Bank Account Number</label>
              <input  requried type="text" name="accountNumber" class="form-control">
            </div>
            <div class="input-group input-group-outline mb-3">
              <label class="form-label">Bank Account Name</label>
              <input  requried type="text" name="bankName" class="form-control">
            </div>
            <div class="input-group input-group-outline mb-3">
              <label class="form-label">IFSC Code</label>
              <input  requried type="text" name="ifsc" class="form-control">
            </div>
            <div class="text-center">
              <button type="submit" class="btn bg-gradient-success w-50 my-4 mb-2">Update</button>
            </div>
          </form>
        </div>
<%     } %>

      <footer class="footer py-4  ">
        <div class="container-fluid">
          <div class="row align-items-center justify-content-lg-between">
            <div class="col-lg-6 mb-lg-0 mb-4">
              <div class="copyright text-center text-sm text-muted text-lg-start">
                © <script>
                  document.write(new Date().getFullYear())
                </script>,
                All rights Reserved.
              </div>
            </div>
          </div>
        </div>
      </footer>
    </div>

  </main>
  <!--   Core JS Files   -->
  <script src="../assets/js/core/popper.min.js"></script>
  <script src="https://kit.fontawesome.com/3d17848b75.js" crossorigin="anonymous"></script>
  <script src="../assets/js/core/bootstrap.min.js"></script>
  <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>
  <script src="../assets/js/plugins/chartjs.min.js"></script>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
  <!-- Github buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="../assets/js/material-dashboard.min.js?v=3.0.0"></script>
</body>

</html>
